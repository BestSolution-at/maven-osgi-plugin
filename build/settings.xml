<settings>
    <servers>
        <server>
            <id>lehel.site</id>
            <username>bob_html</username>
            <password>bob_html</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
          <id>central-czm-LAN</id>
          <name>Central Mirror</name>
          <url>http://artifactory-medmuc:8084/artifactory/lehel-public-repository</url>
          <mirrorOf>central</mirrorOf>
        </mirror>
      </mirrors>
    

    <profiles>
        <profile>
            <id>is-ci-build</id>
            <activation>
                <property>
                    <name>teamcity.version</name>
                </property>
            </activation>
            <properties>
                <ci-build>true</ci-build>
            </properties>
        </profile>
        <profile>
            <id>missing-build-vcs-number</id>
            <activation>
                <property>
                    <name>!build.vcs.number</name>
                </property>
            </activation>
            <!--
            es wird sich wahrscheinlich um einen lokalen build ausserhalb von teamcity handeln.
            build.vcs.number enthaelt unter teamcity die vcs revision der Projekt Sourcen unter build.
            -->
            <properties>
                <build.vcs.number/>
            </properties>
        </profile>
        <profile>
            <id>maven-repository-setup</id>
            <activation>
                <file>
                    <missing>file_existiert_sowieso_nicht</missing>
                </file>
            </activation>
            <repositories>
        	<repository>
                    <id>forum-snapshot</id>
                    <url>http://artifactory-medmuc:8084/artifactory/forum-snapshot-local</url>
            		<releases>
                        <enabled>false</enabled>
            		</releases>
			<snapshots>
                		<enabled>true</enabled>
                		<updatePolicy>always</updatePolicy>
            		</snapshots>
        		</repository>
                <repository>
                    <id>forumtools-snapshot</id>
                    <url>http://artifactory-medmuc:8084/artifactory/forumtools-local
                    </url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>forumtools-release</id>
                    <url>http://artifactory-medmuc:8084/artifactory/forumtools-release-local</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>forum-release</id>
                    <url>http://artifactory-medmuc:8084/artifactory/forum-release-local</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>               
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>czm-packager-release</id>
                    <url>http://artifactory-medmuc:8084/artifactory/packager-release-local</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>central</id>
                    <url>http://artifactory-medmuc:8084/artifactory/lehel-public-repository</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>

            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://artifactory-medmuc:8084/artifactory/lehel-public-repository</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>

        <profile>
            <id>default-properties</id>
            <activation>
                <file>
                    <missing>file_existiert_sowieso_nicht</missing>
                </file>
            </activation>
            <properties>
                <weaveMonitoringAspect>true</weaveMonitoringAspect>
                <forumDicomDir>D:/CZM_Archive_Dev_Needed_Directories_For_Test/Dicom-Files</forumDicomDir>
                <forumDefaultDir>D:/CZM_Archive_Dev_Needed_Directories_For_Test</forumDefaultDir>
                <buildArchivePluginManagement>true</buildArchivePluginManagement>
                <noArchivePluginManagementDeploy>true</noArchivePluginManagementDeploy>
                <skipArchivePluginManagementITs>true</skipArchivePluginManagementITs>
                <bigBuild>true</bigBuild>
                <buildForRelease>false</buildForRelease>
                <!-- empty value means 'no compression'. Varants for valid value are lzma, bzip2, zlib -->
                <lehelDVD.compressor>lzma</lehelDVD.compressor>
                <forumInstallFolder>E:/CZM_Archive_Dev/FORUM</forumInstallFolder>
                <serverIp>127.0.0.1</serverIp>
                <serverUrl>https://127.0.0.1:8181</serverUrl>
                <mySqlHost>localhost</mySqlHost>
                <ignore_by_install/>
                <runATs>true</runATs>
            </properties>
        </profile>

        <profile>
            <id>teamcity-utilization</id>
            <activation>
                <property>
                    <name>build.vcs.number</name>
                </property>
            </activation>
            <properties>
                <versionized>byTeamCity</versionized>
            </properties>
        </profile>
        <profile>
            <id>local-build-utilization-01</id>
            <!-- setup a local (developer) maven build -->
            <activation>
                <property>
                    <name>!application.buildnumber</name>
                </property>
            </activation>
            <properties>
                <versionized>local-build</versionized>
                <application.buildnumber>${maven.build.timestamp}</application.buildnumber>
            </properties>
        </profile>
        <profile>
            <id>mac-os-x-setup</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <forumDicomDir>${user.home}/CZM_Archive_Dev_Needed_Directories_For_Test/Dicom-Files</forumDicomDir>
                <forumDefaultDir>${user.home}/CZM_Archive_Dev_Needed_Directories_For_Test</forumDefaultDir>
            </properties>
        </profile>
        <profile>
            <id>overwrite-buildForRelease</id>
            <activation>
                <property>
                    <name>buildForRelease</name>
                </property>
            </activation>
            <properties>
                <buildForRelease>${buildForRelease}</buildForRelease>
            </properties>

        </profile>
        <profile>
            <id>overwrite-forumDicomDir</id>
            <activation>
                <property>
                    <name>forumDicomDir</name>
                </property>
            </activation>
            <properties>
                <forumDicomDir>${forumDicomDir}</forumDicomDir>
            </properties>
        </profile>
        <profile>
            <id>overwrite-forumDefaultDir</id>
            <activation>
                <property>
                    <name>forumDefaultDir</name>
                </property>
            </activation>
            <properties>
                <forumDefaultDir>${forumDefaultDir}</forumDefaultDir>
            </properties>
        </profile>
        <profile>
            <id>overwrite-forumInstallFolder</id>
            <activation>
                <property>
                    <name>forumInstallFolder</name>
                </property>
            </activation>
            <properties>
                <forumInstallFolder>${forumInstallFolder}</forumInstallFolder>
            </properties>
        </profile>

        <profile>
            <id>continuous-integration-phase1</id>
            <!-- fast build as a first response of a commit -->
            <!-- only compile, only run unit tests -->
            <!-- no deployment, no integration tests -->
            <properties>
                <forum.build.profile>continuous-integration-phase1</forum.build.profile>
                <label>false</label>
                <buildDVD>false</buildDVD>
                <buildEmma>false</buildEmma>
                <buildHL7>true</buildHL7>
                <buildArchiveRest>true</buildArchiveRest>
                <buildTestingService>true</buildTestingService>
                <buildBackup>true</buildBackup>
                <buildArchiveAdmin>true</buildArchiveAdmin>
                <skipTests>false</skipTests>
                <skipITs>true</skipITs>
                <skipArchiveServerITs>true</skipArchiveServerITs>
                <skipArchiveAdminITs>true</skipArchiveAdminITs>
                <noArchiveServerDeploy>true</noArchiveServerDeploy>
                <noDatabaseCreation>true</noDatabaseCreation>
                <noHL7Deploy>true</noHL7Deploy>
                <noArchiveAdminDeploy>true</noArchiveAdminDeploy>
                <noBackupDeploy>true</noBackupDeploy>
                <noTestDataSetupDeploy>true</noTestDataSetupDeploy>
                <eclipselink.weaving>static</eclipselink.weaving>
                <ignoreUnittestFailure>false</ignoreUnittestFailure>
                <ignoreIntegrationtestFailure>false</ignoreIntegrationtestFailure>
                <ignoreTestFailureInCoverage>true</ignoreTestFailureInCoverage>
                <buildSchwabingQuapTests>false</buildSchwabingQuapTests>
                <populateQuapTestResults>false</populateQuapTestResults>
                <coverageWithCobertura>false</coverageWithCobertura>
            </properties>
        </profile>
        <profile>
            <id>continuous-integration-phase2</id>
            <activation>
                <property>
                    <name>continuous-integration-phase2</name>
                    <value>true</value>
                </property>
            </activation>
            <!-- deploy applications, run integration tests -->
            <!-- settings assumes, that the profile continuous-integration-commit-phase 1 is also activated -->
            <properties>
                <forum.build.profile>continuous-integration-phase2</forum.build.profile>
                <skipAllUnitTests>true</skipAllUnitTests>
                <skipITs>false</skipITs>
                <skipArchiveServerITs>false</skipArchiveServerITs>
                <skipArchiveAdminITs>false</skipArchiveAdminITs>
                <skipQuapTests>true</skipQuapTests>
                <noArchiveServerDeploy>false</noArchiveServerDeploy>
                <noDatabaseCreation>false</noDatabaseCreation>
                <noHL7Deploy>false</noHL7Deploy>
                <noArchiveAdminDeploy>false</noArchiveAdminDeploy>
                <noBackupDeploy>false</noBackupDeploy>
                <noTestDataSetupDeploy>false</noTestDataSetupDeploy>
                <buildITTestModule>true</buildITTestModule>
            </properties>
        </profile>
        <profile>
            <id>overwrite-ignoreUnittestFailure</id>
            <activation>
                <property>
                    <name>ignoreUnittestFailure</name>
                </property>
            </activation>
            <properties>
                <ignoreUnittestFailure>${ignoreUnittestFailure}</ignoreUnittestFailure>
            </properties>
        </profile>
        <profile>
            <id>overwrite-weaveMonitoringAspect</id>
            <activation>
                <property>
                    <name>weaveMonitoringAspect</name>
                </property>
            </activation>
            <properties>
                <weaveMonitoringAspect>${weaveMonitoringAspect}</weaveMonitoringAspect>
            </properties>
        </profile>
        <profile>
            <id>perform-release</id>
            <properties>
                <skipAllUnitTests>false</skipAllUnitTests>
            </properties>
        </profile>
        <profile>
            <id>overwrite-coverageWithCobertura</id>
            <activation>
                <property>
                    <name>coverageWithCobertura</name>
                </property>
            </activation>
            <properties>
                <coverageWithCobertura>${coverageWithCobertura}</coverageWithCobertura>
            </properties>
        </profile>
    </profiles>

</settings>
